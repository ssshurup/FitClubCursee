<Page x:Class="FitClubCurse.Pages.LoginP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FitClubCurse.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginP">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" HorizontalAlignment="Center" FontSize="20"/>
            <StackPanel Margin="5" HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock Width="50" Text="Логин"/>
                <TextBox Margin="10,0" Text="{Binding login}" Width="200"/>
            </StackPanel>
            <StackPanel Margin="5" HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock Width="50"  Text="Пароль"/>
                <TextBox Margin="10,0" Text="{Binding password}" Width="200"/>
            </StackPanel>
            <StackPanel VerticalAlignment="Bottom">
                <Button x:Name="LogBT" Content="Авторизироваться" Margin="0,5" Width="250" Click="LogBT_Click"/>
                <Button x:Name="RegBT" Content="Зарегистрироваться" Margin="0,5" Width="250" Click="RegBT_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
