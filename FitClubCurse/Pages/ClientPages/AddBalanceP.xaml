<Page x:Class="FitClubCurse.Pages.ClientPages.AddBalanceP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FitClubCurse.Pages.ClientPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddBalanceP">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Пополнение баланса" HorizontalAlignment="Center" FontSize="20"/>
            <StackPanel Margin="5" HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock Width="50" Text="Сумма"/>
                <TextBox x:Name="SumTB"  Width="200" Margin="10,0"/>
            </StackPanel>
            <StackPanel Grid.Row="2"  Width="200">
                <Button x:Name="AddBT" Content="Пополнить"  Margin="10,5" Click="AddBT_Click" />
                <Button x:Name="BackBT" Content="Назад" Margin="10,5" Click="BackBT_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
